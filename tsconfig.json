{
  "compilerOptions": {
    "skipLibCheck": true,
    
    "target": "ES2021",
    "module": "CommonJS",
    "jsx": "react",
    "declaration": false,
    "sourceMap": true,         
    "outDir": "./dist",          

    "types": [
        "node",
        "mocha"
    ],

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "esModuleInterop": true
  }
}
